<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    tools:context=".AuthActivity">

    <!-- HEADER TEXT -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Discover teachers\nwho teach what you love"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ILLUSTRATION IMAGE (Boy Painting) -->
    <!-- Replace src with your actual image later -->
    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/auth_ladki"
        app:layout_constraintBottom_toTopOf="@+id/bottomSheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.4" />

    <!-- BOTTOM SHEET (Dark Blue Area) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#2F2B4B"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TOGGLE BUTTONS (Sign up / Login) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Sign Up Button (Darker) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignUpTab"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#1F1B33"
                    app:cornerRadius="20dp"
                    app:elevation="0dp"/>

                <!-- Login Button (Lighter/Active) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoginTab"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="#2F2B4B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#E0E0E0"
                    app:cornerRadius="20dp"
                    app:elevation="0dp"/>
            </LinearLayout>

            <!-- SOCIAL ICONS ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- 1. Google Button (The working one) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnGoogle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/google_logo"
                        android:contentDescription="Google Sign In" />
                </androidx.cardview.widget.CardView>

                <!-- 2. Facebook (Placeholder) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/facebook_logo"
                        android:contentDescription="Facebook Sign In"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>

                <!-- 3. Yahoo (Placeholder) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/yahoo_logo"
                        android:contentDescription="Yahoo Sign In"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>

                <!-- 4. Phone (Placeholder) -->

                <!-- 5. Guest (Placeholder) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/apple_logo"
                        android:contentDescription="Sign in with Apple"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>