<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="35dp"
    app:cardElevation="0dp"
    app:strokeWidth="5dp"
    app:strokeColor="#44000000"
    android:backgroundTint="#FF000000">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6555C0">

        <!-- ================= 1. FULL SCREEN MAP LAYER ================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Floating Search Button (Top Right) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnSearchMap"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="35dp"
                app:cardBackgroundColor="#44000000"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"
                    android:padding="12dp"
                    app:tint="#FFFFFFFF"/>
            </androidx.cardview.widget.CardView>

            <!-- Current Location Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnMyLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="110dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#44000000"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_locator"
                    android:padding="7dp"
                    app:tint="#FFFFFFFF"/>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ================= 2. FLOATING BOTTOM SHEET LAYER ================= -->
        <FrameLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@android:color/transparent"
            app:behavior_hideable="false"
            app:behavior_peekHeight="95dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <!-- THE ACTUAL FLOATING CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#FF4F5CA4"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:strokeColor="#44000000"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- ===== PEEK ROW (Always Visible) ===== -->
                    <LinearLayout
                        android:id="@+id/peekLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp">

                        <!-- Price Tag -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            app:cardCornerRadius="28dp"
                            app:cardBackgroundColor="#44000000"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="20dp">

                                <TextView
                                    android:id="@+id/tvSheetPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹1000"
                                    android:textColor="#FFCA28"
                                    android:textStyle="bold"
                                    android:textSize="22sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/M"
                                    android:textColor="#B0B0B0"
                                    android:textSize="14sp"
                                    android:layout_marginStart="2dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Spacer -->
                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                        <!-- Toggle Arrow Button -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnSheetToggleCard"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="#44000000"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:id="@+id/btnSheetToggle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_up_solid"
                                android:padding="5dp"
                                app:tint="#FFFFFF"/>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- THE CALL BUTTON WITH RINGING ANIMATION -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnSheetCall"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="#44000000"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true">

                            <!-- REPLACED SRC WITH avd_phone_ring -->
                            <ImageView
                                android:id="@+id/imgSheetCallIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/avd_phone_ring"
                                android:padding="10dp"
                                app:tint="#FFFFFF"/>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- ===== EXPANDED CONTENT (Scrollable) ===== -->
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF4F5CA4"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="20dp"
                            android:paddingBottom="40dp">

                            <!-- Title & Subject -->
                            <TextView
                                android:id="@+id/tvSheetTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shradha Classes"
                                android:textColor="#FFFFFF"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"/>

                            <TextView
                                android:id="@+id/tvSheetSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mathematics • Class 11-12"
                                android:textColor="#D1C4E9"
                                android:textSize="16sp"
                                android:layout_marginTop="4dp"/>

                            <!-- Divider -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#30000000"
                                android:layout_marginVertical="20dp"/>

                            <!-- Teacher Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@android:drawable/ic_menu_myplaces"
                                    app:tint="#FFCA28"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="15dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Qualified Teacher"
                                        android:textColor="#FFF"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="M.Sc Mathematics, 5 Yrs Exp."
                                        android:textColor="#D1C4E9"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Reviews Box -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                app:cardBackgroundColor="#44000000"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="20dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:text="Student Reviews"
                                            android:textColor="#FFFFFF"
                                            android:textStyle="bold"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:text="4.8 ★"
                                            android:textColor="#FFCA28"
                                            android:textStyle="bold"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tvSheetDesc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Great explanation skills. The interactive sessions really help in clearing doubts."
                                        android:textColor="#B0B0B0"
                                        android:textSize="14sp"
                                        android:layout_marginTop="10dp"
                                        android:lineSpacingExtra="4dp"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Action Buttons -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="25dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnEnroll"
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="8dp"
                                    android:text="Enroll Now"
                                    android:textColor="#2E2345"
                                    android:textStyle="bold"
                                    app:cornerRadius="20dp"
                                    app:backgroundTint="#FFCA28"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnReport"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="8dp"
                                    app:icon="@android:drawable/stat_notify_error"
                                    app:iconTint="#FFF"
                                    app:iconGravity="textStart"
                                    app:cornerRadius="20dp"
                                    app:backgroundTint="#FF5252"
                                    android:insetLeft="0dp"
                                    android:padding="0dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.google.android.material.card.MaterialCardView>