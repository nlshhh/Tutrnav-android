<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A4BC3"
    tools:context=".SignUpActivity">

    <!-- HEADER: Back Arrow & Logo -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo_atom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TutorNav"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- MAIN CARD -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="#2E2345"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBrand">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvSignUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- "Sign In instead" Row -->
            <LinearLayout
                android:id="@+id/signInRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvSignUpTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or Sign In instead"
                    android:textColor="#B0B0B0"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"/>

                <!-- Small Dark Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sign In"
                    android:textColor="#9FA8DA"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:backgroundTint="#1F1B33"
                    app:cornerRadius="15dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
            </LinearLayout>

            <!-- Social Section -->
            <TextView
                android:id="@+id/tvSocialLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or Sign Up with third Party"
                android:textColor="#B0B0B0"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signInRow" />

            <LinearLayout
                android:id="@+id/socialContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvSocialLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Google -->
                <TextView
                    android:id="@+id/btnGoogle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_dark"
                    android:gravity="center"
                    android:text="G"
                    android:textColor="#A0A0A0"
                    android:textStyle="bold"/>

                <!-- FB -->
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_circle_dark"
                    android:gravity="center"
                    android:text="FB"
                    android:textColor="#A0A0A0"
                    android:textStyle="bold"/>

                <!-- Others -->
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_circle_dark"
                    android:gravity="center"
                    android:text="Y!"
                    android:textColor="#A0A0A0"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or with the Details"
                android:textColor="#B0B0B0"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/socialContainer" />

            <!-- INPUT FIELDS -->
            <!-- 1. Name -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_field"
                android:hint="Full Name"
                android:textColorHint="#5C5670"
                android:textColor="#FFFFFF"
                android:paddingStart="16dp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvDetailsLabel" />

            <!-- 2. Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_field"
                android:hint="Email Address"
                android:textColorHint="#5C5670"
                android:textColor="#FFFFFF"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etName" />

            <!-- 3. Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_field"
                android:hint="Password"
                android:textColorHint="#5C5670"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etEmail" />

            <!-- SIGN UP BUTTON -->
            <android.widget.Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#2E2345"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_light"
                app:layout_constraintTop_toBottomOf="@id/etPassword" />

            <!-- TERMS & CONDITIONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/btnSignUp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:buttonTint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tutrnav is designed to connect teachers and students..."
                        android:textColor="#B0B0B0"
                        android:textSize="10sp"
                        android:paddingEnd="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:buttonTint="#2E2345"
                        android:backgroundTint="#2E2345"/> <!-- Making it look like dark bubble as per screenshot -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By downloading, accessing, or using this application..."
                        android:textColor="#B0B0B0"
                        android:textSize="10sp"
                        android:paddingEnd="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>